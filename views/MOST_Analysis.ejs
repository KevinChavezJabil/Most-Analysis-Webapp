<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MOST Analysis - <%= project.name %></title>
    <link href="/css/MOST_Analysis.css" rel="stylesheet" type="text/css">
</head>
<body>
    <%- include('../views/templates/sidebar.ejs') %>

    <div class="main-container">
        <h1>MOST Analysis for Project: <%= project.name %></h1>
        <table id="mostTable">
            <thead>
                <tr>
                    <th>#</th> <!-- Columna de numeración -->
                    <th>Part Number</th>
                    <th>Description</th>
                    <th>Component</th>
                    <th>Methods</th>
                    <th>Quantity</th>
                    <th>Cycle Time</th>
                </tr>
            </thead>
            <tbody>
                <% if (excelData && excelData['Hoja1'] && excelData['Hoja1'].length > 0) { %>
                    <% excelData['Hoja1'].forEach((row, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td> <!-- Muestra el número de fila -->
                            <td><%= row['PART NUMBERS'] %></td>
                            <td><%= row['DESCRIPTION'] %></td>
                            <td>
                                <select class="component-dropdown">
                                    <!-- Opciones de componente -->
                                </select>
                            </td>
                            <td>
                                <div class="method-container">
                                    <select class="method-dropdown">
                                        <!-- Opciones de método -->
                                    </select>
                                    <button type="button" class="add-method-btn">+</button>
                                    <button type="button" class="remove-method-btn">-</button>
                                </div>
                            </td>
                            <td><%= row['QUANTITY'] %></td>
                            <td><span class="cycle-time"><%= row['Cycle Time'] || 0 %></span></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="7">No data available</td>
                    </tr>
                <% } %>
            </tbody>               
            <tfoot>
                <tr>
                    <td colspan="6">Total Cycle Time</td>
                    <td><span id="totalCycleTime">0</span></td>
                </tr>
            </tfoot>
        </table>
    </div>

    <script src="/js/MOST_Analysis.js"></script>
</body>
</html>
