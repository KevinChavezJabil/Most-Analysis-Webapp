<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My projects</title>
    <link href="/css/projects.css" rel="stylesheet" type="text/css">
</head>
<body>
    <%- include('../views/templates/sidebar.ejs') %>

    <div class="container">
        <main class="content">
            <div class="image-container">
                <img class="login__img" src="/img/p4.png" alt="Login image" />
            </div>
            <div class="projects-container">
                <div class="projects-rectangle">
                    <a href="/excelUpload" class="create-button">+ Create a new project</a>

                    <!-- Nueva barra de búsqueda -->
                    <div class="wrapper">
                        <div class="search-bar">
                            <div class="icon"><img src="/img/search.png" width="25px" height="25px"></div>
                            <input type="text" placeholder="Search projects...">
                            <div class="delete-btn">✖</div>
                            <div class="autocom-box">
                                <!-- Las sugerencias se cargarán aquí dinámicamente -->
                            </div>
                        </div>
                    </div>

                    <h1>Recent projects</h1>
                    <div class="button-grid" id="project-buttons">
                        <% if (projects && projects.length > 0) { %>
                            <% projects.forEach(project => { %>
                                <button class="dynamic-button" onclick="window.location.href='/MOST_Analysis/<%= project.url %>/<%= project.firstSheetName %>'">
                                    <img src="/img/buildings.jpg" alt="Project image">
                                    <h3><%= project.name %></h3>
                                    <h4><%= new Date(project.creationDate).toLocaleDateString('es-ES') %></h4>
                                </button>
                            <% }) %>
                        <% } else { %>
                            <p>No projects found.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.js"></script>
    <script>
        const suggestions = <%= JSON.stringify(suggestions) %>; // Pasar las sugerencias a JavaScript
        const projects = <%= JSON.stringify(projects) %>; // Pasar los proyectos a JavaScript
        console.log('Suggestions:', suggestions); // Log para verificar las sugerencias
    </script>
    <script src="/js/projects.js"></script>    
</body>
</html>
